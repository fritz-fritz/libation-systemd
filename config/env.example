# Copy to: ~/.config/libation-systemd/env   (chmod 600)
# Mount location
MOUNTPOINT=%h/Libation/Books

# Bandwidth Limits for rclone
DOWN_LIMIT=off
UP_LIMIT=10M

# Rclone remote control (for priming cache)
RCLONE_RC_ADDR=127.0.0.1:5572
RCLONE_RC_USER=libation
RCLONE_RC_PASS=CHANGE_ME_TO_A_RANDOM_STRING

# S3 credentials
RCLONE_S3_PROVIDER=<PROVIDER_NAME>
RCLONE_S3_ENDPOINT=<YOUR_ENDPOINT>
RCLONE_S3_ACCESS_KEY_ID=<YOUR_KEY_ID>
RCLONE_S3_SECRET_ACCESS_KEY=<YOUR_APP_KEY>
BUCKET=<BUCKET_NAME>

# Override to ignore rclone config
RCLONE_CONFIG=/dev/null
